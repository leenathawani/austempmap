{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "config": {
    "background": "#fff1de"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leenathawani/vegalite_map/main/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leenathawani/vegalite_map/main/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/leenathawani/vegalite_map/main/data/API_SP.DYN.LE00.IN_DS2_en_csv_v2_4558314.csv"
            },
            "key": "Country_Name",
            "fields": [
              "current"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "current",
          "type": "quantitative",
          "title": "Life Expectancy (no. of years)",
          "scale": {
            "scheme": "yelloworangebrown"
          },
          "legend": {
            "direction": "horizontal",
            "gradientLength": 500,
            "orient": "bottom",
            "offset": 20,
            "labelAlign": "center"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "current",
            "type": "quantitative",
            "title": "Life Expectancy (no. of years)"
          }
        ]
      }
    }
  ]
}