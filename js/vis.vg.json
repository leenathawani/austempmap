{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "config": {"view": {"stroke": null}},
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leenathawani/vegalite_map/main/js/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leenathawani/vegalite_map/main/data/yearly_data_country.csv"
      },
      "transform": [
        {
          "lookup": "Country_Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/leenathawani/vegalite_map/main/js/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
         "color": {
          "field": "Life_Expectancy",
          "type": "quantitative",
          "title": "Life Expectancy (no. of years)",
          "scale": {
            "domain": [50, 60, 65, 70, 75, 77, 80, 82, 85, 90],
            "scheme": "magma",
            "reverse": true
          },
          "legend": {
            "direction": "horizontal",
            "gradientLength": 700,
            "orient": "bottom",
            "offset": 10,
            "labelAlign": "center"
          }
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country"},
          {
            "field": "Life_Expectancy",
            "type": "quantitative",
            "title": "Life_Expectancy (in years)",
            "format": ","
          },
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    }
  ]
}